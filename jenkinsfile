pipeline {
  agent any

  stages {
    stage('Clone Repository') {
      steps {
        git 'https://github.com/yashp119/project111.git'
      }
    }

    stage('Build and Deploy Web Server') {
      steps {
        sh 'docker build -t my-web-server .'
        sh 'docker run -d -p 80:80 my-web-server'
      }
    }

    stage('Build and Deploy WordPress') {
      steps {
        sh 'docker build -t my-wordpress .'
        sh 'docker run -d -p 8080:80 my-wordpress'
      }
    }
  }
}
